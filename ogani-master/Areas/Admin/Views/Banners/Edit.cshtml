@model ogani_master.Models.Banner

@{
    ViewData["Title"] = "Edit";
}

<div class="app-content">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Edit Banner</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="BAN_ID" />

                            <div class="form-group">
                                <label asp-for="Title" class="control-label">Title</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Image" class="control-label">Image</label>
                                <input asp-for="Image" class="form-control" type="file" accept="image/*" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div>
                                    <img id="imgPreview" style="max-width: 200px; max-height: 200px; border: 1px solid #ddd; margin-top: 10px;" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Url" class="control-label">URL</label>
                                <input asp-for="Url" class="form-control" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UpdatedBy" class="control-label">Updated By</label>
                                <input asp-for="UpdatedBy" class="form-control" />
                                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Save" class="btn btn-success" />
                                <a asp-action="Index" class="btn btn-secondary ms-3">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    window.onload = () => {
        document.getElementById("Image").onchange = (e) => {
            var preview = document.getElementById('imgPreview');
            var file = e.target.files[0];
            var reader  = new FileReader();

            reader.onloadend = function () {
              preview.src = reader.result;
            }

            if (file) {
              reader.readAsDataURL(file);
            } else {
              preview.src = '';
            }
        };
    }
</script>
