                    'insertTable', 'mediaEmbed', 'horizontalLine', '|',
                    'imageUpload'
                ],
                table: {
                    contentToolbar: ['tableColumn', 'tableRow', 'mergeTableCells']
                },
                image: {
                    toolbar: ['imageStyle:full', 'imageStyle:side', '|', 'imageTextAlternative'],
                    resizeUnit: 'px',
                    styles: ['full', 'side']
                }
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(error => {
                console.error(error);
            });
    </script>

}

