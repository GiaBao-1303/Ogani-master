@model ogani_master.Models.Menu

@{
    ViewData["Title"] = "Create";
}

<div class="app-content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h4 class="card-title">Create New Menu</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <!-- Validation summary -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                            <!-- Parent ID Field -->
                            <div class="form-group mb-3">
                                <label asp-for="PARENT_ID" class="control-label">Parent Menu</label>
                                <select asp-for="PARENT_ID" class="form-control" asp-items="ViewBag.PARENT_ID">
                                    <option value="">-- Select Parent Menu --</option>
                                </select>
                                <span asp-validation-for="PARENT_ID" class="text-danger"></span>
                            </div>

                            <!-- Title Field -->
                            <div class="form-group mb-3">
                                <label asp-for="Title" class="control-label">Menu Title</label>
                                <input asp-for="Title" class="form-control" placeholder="Enter menu title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <!-- Url Field -->
                            <div class="form-group mb-3">
                                <label asp-for="Url" class="control-label">Menu URL</label>
                                <input asp-for="Url" class="form-control" placeholder="Enter menu URL" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>

                            <!-- Created Date Field -->
                            <div class="form-group mb-3">
                                <label asp-for="CreatedDate" class="control-label">Created Date</label>
                                <input asp-for="CreatedDate" class="form-control" type="date" />
                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                            </div>

                            <!-- Created By Field -->
                            <div class="form-group mb-3">
                                <label asp-for="CreatedBy" class="control-label">Created By</label>
                                <input asp-for="CreatedBy" class="form-control" placeholder="Enter creator's name" />
                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                            </div>

                            <!-- Updated Date Field -->
                            <div class="form-group mb-3">
                                <label asp-for="UpdatedDate" class="control-label">Updated Date</label>
                                <input asp-for="UpdatedDate" class="form-control" type="date" />
                                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                            </div>

                            <!-- Updated By Field -->
                            <div class="form-group mb-3">
                                <label asp-for="UpdatedBy" class="control-label">Updated By</label>
                                <input asp-for="UpdatedBy" class="form-control" placeholder="Enter updater's name" />
                                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                            </div>

                            <!-- Submit and Back Buttons -->
                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save me-1"></i> Save Menu
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
